%h1= "Update #{@entry.word}"

= form_for @entry do |form|
  = label :entry, :word, 'Word'
  %br
  
  = text_field :entry, 'word'
  %br
  = label :entry, :meaning, 'Meaning'
  %br
  = text_area :entry, 'meaning'
  %br
  Instruction File:
  = form.file_field :instructions
  %br
  
  = submit_tag 'Update Entry'

= button_to "Delete #{@entry.word}", entry_path(@entry), :method => :delete, :confirm => 'Are you sure?'
= link_to "Back to #{@entry.word}", entry_path(@entry)